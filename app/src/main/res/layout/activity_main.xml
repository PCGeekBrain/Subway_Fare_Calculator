<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.pcgeekbrain.subwayfarecalculator.MainActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/existing_funds_container"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/existing_funds"
            android:hint="@string/existing_fare" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/existing_funds_container"
        android:layout_centerHorizontal="true"
        android:id="@+id/num_of_trips_container">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/num_of_trips"
            android:hint="@string/num_of_trips"
            android:layout_margin="5dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_to_add_container"
        android:layout_below="@+id/num_of_trips_container"
        android:layout_alignStart="@+id/num_of_trips_container">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/total_to_add"
            android:hint="@string/total_to_add"
            android:layout_margin="5dp" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_on_card_default"
        android:id="@+id/amount_on_card"
        android:layout_below="@+id/amount_remaining"
        android:layout_centerHorizontal="true"
        android:textStyle="italic" />

    <TextView
        android:text="@string/icon_metro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/total_to_add_container"
        android:layout_toStartOf="@+id/num_of_trips_container"
        android:id="@+id/icon_metro"
        android:layout_below="@+id/icon_MetroCard"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:text="@string/icon_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/total_to_add_container"
        android:layout_toStartOf="@+id/total_to_add_container"
        android:id="@+id/icon_money"
        android:layout_below="@+id/icon_metro"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:text="@string/icon_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_MetroCard"
        android:gravity="center_vertical"
        android:textSize="24sp"
        android:layout_above="@+id/num_of_trips_container"
        android:layout_alignStart="@+id/icon_metro"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount_left"
        android:id="@+id/amount_remaining"
        android:textSize="15sp"
        android:textStyle="italic"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
